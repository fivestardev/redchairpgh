<div class="row">
  <div class="col s7">
    <div class="card yellow lighten-4">
      <div class="card-content">
        <h2>Log In to RedChairPGH</h2>
        <br />
      </div>
      <div class="card-content">
        <h3><%=link_to "Login via LinkedIn", "/auth/linkedin"%></h3>
      </div>
      <p> -- OR -- </p>
      <div class="card-content">
        <%= form_tag sessions_path do %>
        	<div class="control-group">
            <%= label_tag :username %>
            <div class="controls">
              <%= text_field_tag :username, params[:username] %>
            </div>
          </div>
          <br/>
        	<div class="control-group">
            <%= label_tag :password %>
            <div class="controls">
              <%= password_field_tag :password %>
            </div>
          </div>
          <br/>
          <div class="actions"><%= submit_tag "Log In", class: "btn-large waves-effect waves-light green lighten-1" %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>