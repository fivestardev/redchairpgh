<div class="page-header">
    <p>Login to RedChairPGH Mentorship</p>
</div>
<div class="row">
  <div class="center">
    <div class="card lighten-4">
      <div class="card-content">
      </div>
      <div class="card-content">
        <%= link_to(image_tag('logos/link.png'), "/auth/linkedin") %>

        </h4>
      </div>
      <p> -- OR -- </p>
      <div class="card-content">
        <%= form_tag sessions_path do %>
        	<div class="control-group">
            <%= label_tag :username %>
            <div class="controls">
              <%= text_field_tag :username, params[:username] %>
            </div>
          </div>
          <br/>
        	<div class="control-group">
            <%= label_tag :password %>
            <div class="controls">
              <%= password_field_tag :password %>
            </div>
          </div>
          <br/>
          <div class="actions"><%= submit_tag "Log In", class: "btn-large waves-effect waves-light green lighten-1" %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>