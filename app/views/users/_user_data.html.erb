<div class="card">
  <div class="card-content">
    <h4>Account Information for <%= @user.first_name %></h4><br />
    
    <b>Profile Photo:&nbsp;&nbsp;</b>
    <% unless @user.image_url.nil? %> 
      <p> 
        <%= image_tag @user.image_url, :class => "round", :size => "180x180" %> 
      </p>
    <% end %>
    <br/>
    
    <b>Username:&nbsp;&nbsp;</b>
      <%= @user.username %><br />
      
    <b>Full Name:&nbsp;&nbsp;</b>
      <%= @user.first_name%> <%= @user.last_name %><br />

    <b>Email:&nbsp;&nbsp;</b>
      <%= @user.email %><br />
    
    <b>LinkedIn URL:&nbsp;&nbsp;</b>
      <%= @user.url %><br />
      
    <b>Location:&nbsp;&nbsp;</b>
      <%= @user.location %><br />

    <%= link_to 'Edit', edit_user_path(@user) %>
    
  </div>
</div>