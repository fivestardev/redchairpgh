
<div class="row">
  <div class="center">
    <div class="card yellow lighten-4">
      <div class="card-content">
<h1>Change Password</h1>

<%= form_with(model: @user, local: true) do |f| %>
  <% if @user.errors.any? %>

    <br>

    <div id="error_explanation">
      <h4><%= pluralize(@user.errors.count, "error") %> prohibited your changes from being saved:</h4>

      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li style="color: red"><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <br>

    <p>
      <%= f.label :password, "New password" %><br />
      <%= f.password_field :password %>
    </p>

    <p>
      <%= f.label :password_confirmation, "Confirm Password" %><br />
      <%= f.password_field :password_confirmation %>
    </p>

  <p>&nbsp;</p>

  <p>
    <%= f.submit (@user.new_record? ? "Create" : "Update"), class: "btn-large waves-effect waves-light red lighten-1" %>
    &nbsp;
    <%= link_to 'Cancel', (@user.new_record? ? home_path : user_path(@user)), class: "btn-large waves-effect waves-light red lighten-1"  %>
  </p>

<% end %>
</div>
</div>
</div>
</div>