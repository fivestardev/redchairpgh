<% if current_user.active.nil? or current_user.active != true %>
  <div class="card">    
    <div class="card-content">
      <p>Optional! Set up an email and password if you don't want to login through LinkedIn from now on!</p>
      <%= simple_form_for(@user) do |f| %>
        <%= f.error_notification %>
        <div class="row">
          <div class="form-inputs">
            <%= f.input :first_name %> 
            <%= f.input :last_name %> 
            <%= f.input :location %> 
            <%= f.input :url %> 
            <br>CODE OF CONDUCT</br>
            <p>In order to maintain a healthy and safe mentorship environment,
            all members must agree to all terms in the code of conduct.</p>
            <p>Do you agree to follow these rules?</p>
            <%= check_box_tag :agreed %>
            <% f.hidden_field :active, value: true %>
        </div>
      </div>
    </div>
  </div>
  
    <div class="row">
      <div class="form-actions col s7">
        <%= f.button :submit, :value => "Create Account"%>
      </div>
    </div>
  <% end %>
<% else %>
  redirect_to home_path 
<% end %>
