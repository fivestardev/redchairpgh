<% if current_user.password.nil? #current_user.active.nil? or current_user.active != true %>
  <div class="card">    
    <div class="card-content">
      <h4>Optional! Set up an email and password if you don't want to login through LinkedIn from now on.</h4>
      <%= form_with(model: @user, local: true) do |f| %>
    	<% if @user.errors.any? %>
            <br>
        
            <div id="error_explanation">
              <h4><%= pluralize(@user.errors.count, "error") %> prohibited this account from being created:</h4>
              <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <% if msg.include? "Family" %>
                  <li style="color: red"><%= msg %></li>
                <% end %>
            <% end %>
              </ul>
            </div>
        <% end %>
        <br>
      
        <h4>Account Information</h4>

        <p>
        <%= f.label :username, "Username" %><br />
        <%= f.text_field :username %>
        </p>
        
        <p>
        <%= f.label :password %><br />
        <%= f.password_field :password %>
        </p>
        
        <p>
        <%= f.label :password_confirmation, "Confirm Password" %><br />
        <%= f.password_field :password_confirmation %>
        </p>
        
        <p><%= f.submit (@user.new_record? ? "Sign up" : "Update"), class: "btn-large waves-effect waves-light green lighten-1" %></p>

    <% end %>
    </div>
  </div>
<% end %>
